# TempFiles Production Environment Configuration
# Copy this to .env for production deployment

# =================================
# SERVER CONFIGURATION
# =================================

# Server port (typically 3000 behind reverse proxy)
PORT=3000

# Public URL for the application (IMPORTANT: Set this for production!)
# This URL will be used for download links and MUST match your domain
PUBLIC_URL=https://files.yourdomain.com

# =================================
# FILE STORAGE CONFIGURATION
# =================================

# Upload directory path
UPLOAD_DIR=./uploads

# Maximum file size in bytes (100MB)
MAX_FILE_SIZE=104857600

# File expiry time in hours
FILE_EXPIRY_HOURS=1

# =================================
# SECURITY CONFIGURATION
# =================================

# Enable CORS
ENABLE_CORS=true

# Allowed origins for CORS (set to your domain in production)
# For WEB-ONLY mode (blocks API access from other domains):
CORS_ORIGINS=https://files.yourdomain.com,https://yourdomain.com
# For PUBLIC API mode (allows API access from anywhere):
# CORS_ORIGINS=*

# Enable request logging
ENABLE_LOGGING=true

# =================================
# CLEANUP CONFIGURATION
# =================================

# Cleanup interval in seconds
CLEANUP_INTERVAL_SECONDS=1

# =================================
# WEB UI CONFIGURATION
# =================================

# Enable web UI interface
ENABLE_WEB_UI=true

# Static files directory
STATIC_DIR=./web/static

# Templates directory
TEMPLATES_DIR=./web/templates

# Default theme (light, dark)
DEFAULT_THEME=dark

# =================================
# PRODUCTION CONFIGURATION
# =================================

# Environment mode
APP_ENV=production

# Enable debug mode (should be false in production)
DEBUG=false

# Log level
LOG_LEVEL=info
